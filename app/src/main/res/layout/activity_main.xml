<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul"
    tools:context="com.example.android.localizator.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/logo"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/havelock_green_rounded_corners"
            android:text="@string/add_address"
            android:gravity="center"
            android:id="@+id/btn_add_address"
            android:textColor="@color/Branco"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:layout_below="@+id/img_logo"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_address"
            android:background="@drawable/havelock_green_rounded_corners"
            android:text="@string/show_addresses"
            android:gravity="center"
            android:id="@+id/btn_show_addresses"
            android:textColor="@color/Branco"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            />

    </RelativeLayout>

</ScrollView>
